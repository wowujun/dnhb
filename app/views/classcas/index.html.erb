




<%=render 'unhead' %>

<div class="container fluid-height clearfix">

  <h2 class="heading">经典案例</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th>标题</th>
        <th>图片</th>
        <th>时间</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @classcas.each do |classca| %>
          <tr>
            <td><i class="icon-user"></i></td>
            <td><%= classca.title %></td>
            <td><%= classca.image %></td>
            <td><%= classca.time.strftime("%Y-%m-%d %H:%M:%S")%></td>
            <td><%= link_to "", classca,  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
              <%= link_to '', classca, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="sabrosus">
      <%= will_paginate @classcas, :previous_label => '上一页', :next_label => '下一页' %>
    </div>
    <br>

    <%= link_to ' 新增案例', new_classca_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
  </div>
</div>
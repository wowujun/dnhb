<div class="widget-container fluid-height clearfix padded">
  <%= form_for(@sidecfg) do |f| %>

      <div class="form-horizontal pull-left col-md-8" >

        <div class="form-group">
          <div class="control-label col-md-3"> 公司名称</div>
          <div class="col-md-6"><%= f.text_field :company,class:"form-control" %></div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-3"><%= f.label :电话 %></div>
          <div class="col-md-6"><%= f.text_field :tel ,class:"form-control" %></div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-3"><%= f.label :传真 %></div>
          <div class="col-md-6"><%= f.text_field :fax,class:"form-control"  %></div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-3"><%= f.label :地址 %></div>
          <div class="col-md-6"><%= f.text_area :address,class:"form-control"  %></div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-3"> <%= f.label :订阅号 %></div>
          <div class="col-md-6"><%= f.text_field :dingyuhao,class:"form-control"  %></div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-3"> <%= f.label :二维码 %></div>
          <div class="col-md-6"><%= f.kindeditor :image,class:"form-control"  %></div>
        </div>
        <div class="actions " >
          <div class="col-md-6" style="padding-right: 0px;"><%= f.submit :'确定', class:"btn btn-primary-outline pull-right" %></div>
        </div>

      </div>
  <% end %>
</div>
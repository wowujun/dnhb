<%= form_for(@sideshixt) do |f| %>
    <fieldset>
  <% if @sideshixt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sideshixt.errors.count, "error") %> prohibited this sideshixt from being saved:</h2>

      <ul>
      <% @sideshixt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <table class="col-lg-12">
      <tr>
        <div  class="form-group">
          <td style="margin-top: 10px;width:90px;text-align: right;padding: 10px;"> <%= f.label :标题 %></td>
          <td><%= f.text_field :title ,:class =>"form-control"%></td>
        </div>
      </tr>
      <tr>
        <div  class="form-group">
          <td style="margin-top: 10px;width:90px;text-align: right;padding: 10px;"> <%= f.label :日期 %></td>
          <td ><%= f.datetime_select :date,:class =>"form-control" %></td>
        </div>
      </tr>
      <tr>
        <div   class="form-group">
          <td style="margin-top: 10px;width:90px;text-align: right;padding: 10px;"> <%= f.label :内容 %></td>
          <td> <%= f.kindeditor :content,:class =>"form-control", height:'700'%></td>
        </div>
      </tr>
      <tr>
        <div>
          <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :状态 %></td>
          <td >
            <div style="display: none;">
              <%= f.number_field :status, value:1, class:"form-control" %>
            </div>

            <div class="toggle-switch text-toggle-switch" data-off-label="不置顶" data-on="primary" data-on-label="置顶">
              <% if @sideshixt.status == 0 %>
                  <input id="statuschange" name="statuschange" type="checkbox" onchange="javascript:sideshixtstatuschange()">
              <% else %>
                  <input checked="" id="statuschange" name="statuschange" type="checkbox" onchange="javascript:sideshixtstatuschange()">
              <% end %>
            </div>
          </td>
        </div>
      </tr>


      <tr>
        <td align="right" colspan="2" style="padding: 0px;"><div class="actions">
          <%= f.submit :"确定", class:"btn btn-primary-outline pull-right" %></td>
        </div>
      </tr>
    </table>
    </fieldset>
<% end %>








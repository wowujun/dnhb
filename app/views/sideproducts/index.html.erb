

<%=render 'unhead' %>

<div class="container fluid-height clearfix">

  <h2 class="heading">产品设置</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>

        <th>标题</th>
        <th>图片</th>
        <th>内容</th>
        <th>类别</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @sideproducts.each do |sideproduct| %>
          <tr>
            <td><i class="icon-user"></i></td>
            <td><%= sideproduct.title %></td>
            <td><%= sideproduct.image %></td>
            <td><%= sideproduct.content %></td>
            <%@sidecla = Sidecla.find(sideproduct.sidecla_id) %>
            <td><%= @sidecla.name%></td>

            <td><%= link_to "", sideproduct,  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
              <%= link_to '', sideproduct, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="sabrosus">
      <%= will_paginate @sideproducts, :previous_label => '上一页', :next_label => '下一页' %>
    </div>
    <br>

    <%= link_to ' 新建产品', new_sideproduct_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
  </div>
</div>
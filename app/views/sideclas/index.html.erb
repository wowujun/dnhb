
<%=render 'unhead'%>
<div class="container fluid-height clearfix">
  <p id="notice" style="margin-left: 50px"><%= notice %></p>
  <h2 style="margin-top: 15px;">商家分类设置</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th>名称</th>
        <th>操作</th>
      </tr>
      </thead>
      <% @sideclas.each do |sidecla| %>
          <tr>
            <td width="30px"><i class="icon-sitemap"></i></td>
            <td><%= sidecla.name %></td>
            <td width="100px" align="center"><%= link_to "", edit_sidecla_path(sidecla),  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
              <%= link_to '',sidecla, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
          </tr>
      <% end %>
    </table>
    <br>
    <%= link_to ' 新建产品分类', new_sidecla_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
  </div>
</div>